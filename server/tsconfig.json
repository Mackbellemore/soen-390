{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./build/",
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // Options required to use 'inversify' module
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "lib": [
      "esnext",
      "dom",
      "es2018"
    ],
  },
  "include": ["app/**/*.ts"],
}
